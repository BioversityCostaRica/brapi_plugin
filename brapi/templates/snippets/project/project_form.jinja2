{% extend_me %}

{% block project_section_extra %}
    <div class="col-md-6">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>{{ _("5. BreedBase integration") }}</h5>
            </div>
            <div class="ibox-content">
                <div class="form-group">
                    <label class="col-sm-2 col-form-label">{{ _('Link with a BreedBase server') }}</label>
                    <div class="col-sm-10"><input type="checkbox" name="breedbase_link" class="js-switch" {% if dataworking.breedbase_link == 1 %}checked{% endif %} /><br/><span class="form-text m-b-none">{% block case_comment %}{{ _('If checked ClimMob will store the results of a project in a BreedBase server') }} {% endblock case_comment %}</span></div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">{{ _("Main crop") }}</label>
                    <div class="col-sm-8">
                        <select id="breedbase_crop" name="breedbase_crop" class="form-control chosen-select" tabindex="2">
                            <option value="">{{ _("Select one crop") }}</option>
                            {% for crop in request.h.get_crops() %}
                                <option value="{{ crop.code }}" {% if crop.code == dataworking.breedbase_crop %}selected{% endif %} >{{ crop.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">{{ _("BreedBase server") }}</label>
                    <div class="col-sm-8">
                        <select id="breedbase_server" name="breedbase_server" class="form-control chosen-select" tabindex="2">
                            <option value="">{{ _("Select one server") }}</option>
                            {% for server in request.h.get_servers() %}
                                <option data-url="{{ server.url }}" value="{{ server.code }}" {% if server.code == dataworking.breedbase_server %}selected{% endif %} >{{ server.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
{{ dataworking.breedbase_license }}
                <div class="form-group">
                    <label class="col-sm-4 control-label">{{ _("BreedBase License") }}</label>
                    <div class="col-sm-8">
                        <select id="breedbase_license" name="breedbase_license" class="form-control chosen-select" tabindex="2">
                            <option value="">{{ _("Select one license for your data") }}</option>
                            <option value="CC-BY" {% if dataworking.breedbase_license == "CC-BY" %}selected{% endif %} >Attribution</option>
                            <option value="CC-BY-SA" {% if dataworking.breedbase_license == "CC-BY-SA" %}selected{% endif %} >Attribution-ShareAlike</option>
                            <option value="CC-BY-NC" {% if dataworking.breedbase_license == "CC-BY-NC" %}selected{% endif %} >Attribution-NonCommercial</option>
                            <option value="CC-BY-NC-SA" {% if dataworking.breedbase_license == "CC-BY-NC-SA" %}selected{% endif %} >Attribution-NonCommercial-ShareAlike</option>
                            <option value="OTHER-PUBLIC" {% if dataworking.breedbase_license == "Other" %}selected{% endif %} >Other public domain license</option>
                        </select>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock project_section_extra %}