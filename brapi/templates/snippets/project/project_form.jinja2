{% extend_me %}

{% block project_section_extra %}
    <div class="col-md-12" style="padding: 0px">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                {% if showSelectStructureToClone %}
                    <h5>{{ _("6. BreedBase integration") }}</h5>
                {% else %}
                    <h5>{{ _("5. BreedBase integration") }}</h5>
                {% endif %}
            </div>
            <div class="ibox-content">
                <div class="form-group">
                    <label class="col-sm-2 col-form-label">{{ _('Link with a BreedBase server') }}</label>
                    <div class="col-sm-10"><input type="checkbox" name="breedbase_link" class="js-switch" {% if dataworking.breedbase_link == 1 %}checked{% endif %} /><br/><span class="form-text m-b-none">{{ _('If checked ClimMob will store the results of a project in a BreedBase server') }} </span></div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">{{ _("Crop") }}</label>
                    <div class="col-sm-8">
                        <select id="breedbase_crop" name="breedbase_crop" class="form-control chosen-select" tabindex="2">
                            <option value="">{{ _("Select one crop") }}</option>
                            {% for crop in request.h.get_crops() %}
                                <option value="{{ crop.code }}" {% if crop.code == dataworking.breedbase_crop %}selected{% endif %} >{{ crop.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock project_section_extra %}